<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="250dp"
    android:padding="6dip"
    android:background="@drawable/selector"
    android:clickable="true"
    android:focusable="true">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:src="@mipmap/ic_launcher" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/headline"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/thumbnail"
        android:textSize="20sp"
        android:ellipsize="end"
        android:lines="4"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/summary"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_below="@+id/headline"
        android:textSize="15sp"
        android:textColor="@color/summary_grey"
        android:lines="5"
        android:ellipsize="end"
        ></androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/source_feed"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/thumbnail"
        android:layout_marginTop="6dp"
        android:textAlignment="center"
        ></androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tags"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summary"
        android:layout_alignLeft="@id/summary"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        android:textColor="@color/gator"
        ></androidx.appcompat.widget.AppCompatTextView>
    <RatingBar
        android:id="@+id/ratingBar"
        style="@android:style/Widget.DeviceDefault.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/source_feed"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:layout_toLeftOf="@id/tags"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="4"
        android:stepSize="1.0"></RatingBar>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@id/ratingBar"
        android:textSize="0sp"
        android:id="@+id/url"
        />
</RelativeLayout>